    <div class="body">
        <h1 class="text-center">CONTACT FORM</h1>
        <div class="form-body">
            <div class="form-inner">
                <div class="form-left">
                    <h2>Get in touch</h2>
                    <form action="/contact-us" method="post" class="form-grid" id="myForm">
                        <div class="form-group">
                            <label for="fullName">Full Name:</label>
                            <input name="fullName" type="text" class="form-control" id="fullName" placeholder="Enter your Full Name"
                                required>
                        </div>
                        <div class="form-group">
                            <label for="male">Gender: </label><br>
                            <input type="radio" id="male" name="gender" value="male" required>
                            <label for="male">Male</label>
                            <input type="radio" id="female" name="gender" value="female" required>
                            <label for="female">Female</label><br>
                        </div>
                        <div class="form-group">
                            <label for="dateOfBirth">Date of Birth:</label>
                            <input name="dateOfBirth" type="date" class="form-control" id="dateOfBirth" required>
                        </div>
                        <div class="form-group">
                            <label for="email">Email Address:</label>
                            <input name="email" type="email" class="form-control" id="email" placeholder="youremail@example.com"
                                required>
                        </div>
                        <div class="form-group">
                            <label for="phone">Phone Number:</label>
                            <input name="phone" type="tel" class="form-control" id="phone" placeholder="Phone Number" required>
                        </div>
                        <div class="form-group">
                            <label for="subject">Subject:</label>
                            <textarea name="subject" class="form-control" id="subject" rows="1" placeholder="Subject"
                                required></textarea>
                        </div>
                        <div class="form-group">
                            <label for="message">Your Message:</label>
                            <textarea name="message" class="form-control" id="message" rows="5" placeholder="Write your message here"
                                required></textarea>
                        </div>
                        <button type="submit" class="my-2 form-button">Submit</button>
                    </form>

                </div>
                <div class="form-right">
                    <h2>Contact Us</h2>
                    <div class="contact-item">
                        <div class="left-contact-item">
                            <img src="Icons/map_1865269.png" alt="Location PNG" class="contact-icon">
                        </div>
                        <div class="right-contact-item">
                            <h3>Address</h3>
                            <p>123, XYZ Street, ABC City, 123456</p>
                        </div>
                    </div>
                    <div class="contact-item">
                        <div class="left-contact-item">
                            <img src="Icons/176640_phone_metroui_icon.png" alt="Phone PNG" class="contact-icon">
                        </div>
                        <div class="right-contact-item">
                            <h3>Phone</h3>
                            <p>+92 1234567890</p>
                        </div>
                    </div>
                    <div class="contact-item">
                        <div class="left-contact-item">
                            <img src="Icons/mail_10505856.png" alt="" class="contact-icon">
                        </div>
                        <div class="right-contact-item">
                            <h3>Email</h3>
                            <p>getfit@gmail.com</p>
                        </div>
                    </div>
                    <div class="contact-item">
                        <div class="left-contact-item">
                            <img src="Icons/internet.png" alt="" class="contact-icon">
                        </div>
                        <div class="right-contact-item">
                            <h3>Website</h3>
                            <p>www.getfit.com</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
